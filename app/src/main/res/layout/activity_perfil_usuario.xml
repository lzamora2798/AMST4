<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/back"

    tools:context=".PerfilUsuario">

    <ImageView
        android:id="@+id/imv_foto"
        android:layout_width="wrap_content"
        android:layout_height="146dp"
        android:contentDescription="TODO"
        android:padding="20px"
        android:layout_gravity="center"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/presence_online" />

        <TextView
            android:id="@+id/txt_userId"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20px"
            android:text="ID"
            android:textColor="@color/letra"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_dialog_info" />

        <TextView
            android:id="@+id/txt_nombre"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20px"
            android:text="Nombre de usuario"
            android:textSize="20sp"
            android:textColor="@color/letra"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_dialog_email" />

        <TextView
            android:id="@+id/txt_correo"
            android:layout_width="318dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="correo"
            android:textSize="20sp"
            android:textColor="@color/letra"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="19dp"
            android:layout_height="57dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/stat_sys_phone_call_forward" />

        <TextView
            android:id="@+id/txt_numero"
            android:layout_width="318dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="numero"
            android:textColor="@color/letra"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cerrarSesion"
        android:padding="20px"
        android:background="@drawable/button_shape"
        android:text="Cerrar Sesion"
        android:shadowColor="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"></LinearLayout>

    <Button
        android:id="@+id/btnVerRegistros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:onClick="irRegistros"
        android:text="Ver Registros" />

</LinearLayout>